<theme>
    <formatVersion>4</formatVersion>

	<view name="system">

		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/box.png</path>
			<color>241d1d</color>
		</image>

		<image name="help_background" extra="true">
			<tile>true</tile>
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.065</size>
			<path>./assets/box.png</path>
			<color>241d1d</color>
		</image>

		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
		</helpsystem>

	</view>

	<view name="basic, detailed, grid, video">
		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<color>c9c9c9</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./assets/OPENSANS.TTF</fontPath>
			<fontSize>0.03</fontSize>
		</text>

		<text name="md_rating, md_developer, md_genre, md_players, md_playcount, md_description, md_releasedate">
			<color>c9c9c9</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./assets/OPENSANS.TTF</fontPath>
			<fontSize>0.03</fontSize>
		</text>

		<helpsystem name="help">
			<textColor>ffffffff</textColor>
			<iconColor>ffffffff</iconColor>
		</helpsystem>

		<image name="logo">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>0.173 0.116</size>
		</image>
		
		<textlist name="gamelist">
			<selectedColor>ffffff</selectedColor>
			<primaryColor>c9c9c9</primaryColor>
			<secondaryColor>c9c9c9</secondaryColor>
			<fontPath>./assets/OPENSANS.TTF</fontPath>
			<fontSize>0.03</fontSize>
			<forceUppercase>0</forceUppercase>
			<pos>0.176 0.194</pos>
			<size>0.648 0.68</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>	


	</view>

	<view name="basic">

		<image name="background">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/template_basic.png</path>
		</image>

	</view>

	<view name="detailed, video">	
		
		<image name="background">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/template_detailed.png</path>
		</image>
		
		<!--Hidden Elements -->
		<datetime name="md_lbl_lastplayed">
			<pos>1 1</pos>
		</datetime>
		
		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>
		
		<text name="md_lbl_publisher">
			<pos>1 1</pos>
		</text>
		
		<text name="md_publsher">
			<pos>1 1</pos>
		</text>

		<!--Visible Elements -->
		
		<textlist name="gamelist">
			<selectedColor>ffffff</selectedColor>
			<primaryColor>c9c9c9</primaryColor>
			<secondaryColor>c9c9c9</secondaryColor>
			<fontPath>./assets/OPENSANS.TTF</fontPath>
			<fontSize>0.03</fontSize>
			<forceUppercase>0</forceUppercase>
			<pos>0.487 0.214</pos>
			<size>0.423 0.6</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>	
		
		
		<text name="md_lbl_developer">
			<pos>0.265 0.2</pos>
		</text>
		
		<text name="md_developer">
			<pos>0.265 0.24</pos>
		</text>
		
		<text name="md_lbl_genre">
			<pos>0.265 0.3</pos>
		</text>
		
		<text name="md_genre">
			<pos>0.326 0.3</pos>
		</text>
		
		<text name="md_lbl_releasedate">
			<color>c9c9c9</color>
			<pos>0.265 0.34</pos>
		</text>
		
		<datetime name="md_releasedate">
			<color>c9c9c9</color>
			<pos>0.345 0.34</pos>
		</datetime>
		
		<text name="md_lbl_players">
			<pos>0.265 0.38</pos>
		</text>
		
		<text name="md_players">
			<pos>0.334 0.38</pos>
		</text>
		
		<text name="md_lbl_playcount">
			<pos>0.265 0.45</pos>
		</text>
		
		<text name="md_playcount">
			<pos>0.38 0.45</pos>
		</text>
		
		<text name="md_lbl_rating">
			<pos>0.265 0.49</pos>
		</text>
		
		<rating name="md_rating">
			<pos>0.33 0.495</pos>
			<size>0.035 0.035</size>
			<filledPath>./assets/star_filled_spacing.svg</filledPath>
			<unfilledPath>./assets/star_hollow_3_spacing.svg</unfilledPath>
		</rating>
		
		<text name="md_description">
			<color>c9c9c9</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./assets/OPENSANS.TTF</fontPath>
			<fontSize>0.025</fontSize>
			<size>0.361 0.3</size>
			<pos>0.08 0.55</pos>
		</text>
		
	</view>	
	
	<view name="detailed">	
		
		<image name="md_image">
			<pos>0.08 0.2</pos>
			<maxSize>0.185 0.327</maxSize>
			<origin>0 0</origin>
		</image>
	
	</view>
	
  <feature supported="video">
	  
	  <video name="md_video">
			<pos>0.08 0.2</pos>
			<origin>0 0</origin>
			<size>0.185 0.327</size>
			<delay>0.0</delay>
			<default>./assets/static.mp4</default>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
	  </video>
	  
	</feature>
</theme>
